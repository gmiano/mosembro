<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable smart links for:" />

	<CheckBox android:id="@+id/enable_location_smart_links"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="locations" />
		
	<CheckBox android:id="@+id/enable_event_smart_links"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="events" />

	<Button android:id="@+id/settings_save" android:layout_width="131px"
		android:layout_height="wrap_content" android:text="Save settings" />
</LinearLayout>